{
  "name": "revealer",
  "version": "2.1.6",
  "description": "develop reveal.js presentations happily, without redundant source or boilerplate",
  "main": "src/index.js",
  "bin": {
    "revealer": "src/bin.js"
  },
  "scripts": {
    "deploy-docs": "gh-pages -d docs && rm -rf docs",
    "docs": "mkdir -p docs && jsdoc -c .jsdoc.json src/",
    "format": "prettier-standard 'src/**/*.js'",
    "lint-staged": "lint-staged",
    "lint": "standard",
    "postpublish": "npm run docs && npm run deploy-docs",
    "precommit": "run-p lint lint-staged test",
    "preversion": "git checkout master && git pull",
    "publish-major": "npm run preversion && npm version major && git push origin master --tags && npm publish",
    "publish-minor": "npm run preversion && npm version minor && git push origin master --tags && npm publish",
    "publish-patch": "npm run preversion && npm version patch && git push origin master --tags && npm publish",
    "test": "node test/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdaringe/revealer.git"
  },
  "keywords": [
    "reveal.js",
    "presentation",
    "boilerplate"
  ],
  "author": "cdaringe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdaringe/revealer/issues"
  },
  "homepage": "https://github.com/cdaringe/revealer#readme",
  "devDependencies": {
    "gh-pages": "^0.11.0",
    "husky": "^0.14.3",
    "jsdoc": "^3.4.0",
    "lint-staged": "^7.2.0",
    "minami": "^1.2.3",
    "npm-run-all": "^4.1.3",
    "nyc": "^8.4.0",
    "prettier-standard": "^8.0.1",
    "reveal.js": "^3.6.0",
    "standard": "^12.0.1",
    "tape": "^4.6.0"
  },
  "dependencies": {
    "app-root-path": "^1.3.0",
    "chokidar": "^1.7.0",
    "commander": "^2.9.0",
    "fs-extra": "^1.0.0",
    "mkdirp": "^0.5.1",
    "perish": "^1.0.2"
  },
  "peerDependencies": {
    "reveal.js": "*"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  }
}
